##Set score
scoreboard players set #Store lem.battle.combatstyle 1

##Disable cooldown
scoreboard players set #Store lem.battle.attackcooldown 0

##Set damage values
scoreboard players set #Store lem.battle.moderndamage.sword 0
scoreboard players set #Store lem.battle.moderndamage.trident 0
scoreboard players set #Store lem.battle.moderndamage.axe 0
scoreboard players set #Store lem.battle.moderndamage.pickaxe 0
scoreboard players set #Store lem.battle.moderndamage.shovel 0
scoreboard players set #Store lem.battle.moderndamage.hoe 0

##Enable sword blocking
scoreboard players set #Store lem.battle.swordblock 1

##Enable Critical Attacks
scoreboard players set #Store lem.battle.criticalhits 1

##Enable old knockback
scoreboard players set #Store lem.battle.oldknockback 1
