##Set score
scoreboard players set #Store lem.battle.combatstyle 2

##Enable cooldown
scoreboard players set #Store lem.battle.attackcooldown 1

##Set damage values
scoreboard players set #Store lem.battle.moderndamage.sword 1
scoreboard players set #Store lem.battle.moderndamage.trident 1
scoreboard players set #Store lem.battle.moderndamage.axe 1
scoreboard players set #Store lem.battle.moderndamage.pickaxe 1
scoreboard players set #Store lem.battle.moderndamage.shovel 1
scoreboard players set #Store lem.battle.moderndamage.hoe 1

##Disable sword blocking
scoreboard players set #Store lem.battle.swordblock 0

##Enable Critical Attacks
scoreboard players set #Store lem.battle.criticalhits 1

##Disable old knockback
scoreboard players set #Store lem.battle.oldknockback 0
